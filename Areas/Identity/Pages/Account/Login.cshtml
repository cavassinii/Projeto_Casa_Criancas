@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - Casa da Criança</title>
<link rel="icon" type="image/x-icon" href="~/logoPequena.ico" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Projeto_Casa_Criancas.styles.css" asp-append-version="true" />
<body style="overflow:hidden">

<div class="row d-flex justify-content-center align-items-center vh-100 " style="background-color: black;">
    <div class="col-md-4">
            <section class="p-4 shadow rounded" style="background-color: #f8f9fa; border-radius: 90px">
            <h1 class="text-center mb-4"><i class="bi bi-sign-in-alt"></i> @ViewData["Title"]</h1>
            <form id="account" method="post">
                <h2 class="text-center">Use sua conta para entrar</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha" />
                        <label asp-for="Input.Password">Senha</label>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        Lembrar de mim
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                        <i class="bi bi-sign-in-alt"></i> Login
                    </button>
                </div>

                <div class="mt-3 text-center">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar um novo usuário</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
