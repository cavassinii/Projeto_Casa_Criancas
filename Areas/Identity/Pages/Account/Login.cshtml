@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
    
    Layout = null;
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - Projeto_Casa_Criancas</title>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Projeto_Casa_Criancas.styles.css" asp-append-version="true" />

<h1><i class="bi bi-box-arrow-in-right"></i> @ViewData["Title"]</h1>

<div class="row ">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 class="mb-3">Use uma conta para entrar</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"><i class="bi bi-envelope-fill"></i> Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha" />
                    <label asp-for="Input.Password" class="form-label"><i class="bi bi-lock-fill"></i> Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        <i class="bi bi-check-square"></i> Lembrar de mim
                    </label>
                </div>

               
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"><i class="bi bi-box-arrow-in-right"></i> Entrar</button>
                </div>

                
                <div class="mt-3">
                    <p><a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a></p>
                    <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar um novo usuário</a></p>
                    <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmação de email</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
