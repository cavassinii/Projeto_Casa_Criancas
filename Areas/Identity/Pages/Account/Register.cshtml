@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
    Layout = null;
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - Casa da Criança</title>
<link rel="icon" type="image/x-icon" href="~/logoPequena.ico" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Projeto_Casa_Criancas.styles.css" asp-append-version="true" />

<body style="overflow:hidden;background-color:black">
    <div class="row d-flex justify-content-center align-items-center vh-100" style="border-radius: 75px">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="p-4 shadow rounded" style="background-color: #f8f9fa;">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <h2 class="text-center">Crie uma nova conta</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-envelope"></i></i></span>
                <div class="form-floating flex-grow-1">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                    <label asp-for="Input.Email">Email</label>
                </div>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <div class="form-floating flex-grow-1">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="senha" />
                    <label asp-for="Input.Password">Senha</label>
                </div>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <div class="form-floating flex-grow-1">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirme a senha" />
                    <label asp-for="Input.ConfirmPassword">Confirme a Senha</label>
                </div>
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3"><i class="fas fa-user-plus"></i> Registrar</button>
        </form>
    </div>
</div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
