@model IEnumerable<Projeto_Casa_Criancas.Models.Responsavel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Responsáveis";
}

<h1 class ="my-4"><i class="bi bi-people-fill"></i> Lista de Responsáveis</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Novo Responsável
    </a>
</p>

<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th><i class="bi bi-person-fill"></i> @Html.DisplayNameFor(model => model.nome)</th>
            <th><i class="bi bi-telephone-fill"></i> @Html.DisplayNameFor(model => model.celular)</th>
            <th><i class="bi bi-gear-fill"></i> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.celular)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-eye-fill"></i> Detalhes
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash-fill"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
