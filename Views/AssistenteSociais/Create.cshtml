@model Projeto_Casa_Criancas.Models.AssistenteSocial

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Adicionar Assistente Social";
}

<h1><i class="bi bi-person-plus-fill"></i>&nbsp;Adicionar Assistente Social</h1>

<hr />
<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="nome" class="control-label"><i class="bi bi-person-fill"></i>&nbsp;Nome</label>
            <input asp-for="nome" class="form-control" placeholder="Digite o nome completo" />
            <span asp-validation-for="nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="cpf" class="control-label"><i class="bi bi-card-text"></i>&nbsp;CPF</label>
            <input asp-for="cpf" class="form-control" placeholder="Digite o CPF" />
            <span asp-validation-for="cpf" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="endereco" class="control-label"><i class="bi bi-house-door-fill"></i>&nbsp;Endereço</label>
            <input asp-for="endereco" class="form-control" placeholder="Digite o endereço completo" />
            <span asp-validation-for="endereco" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="celular" class="control-label"><i class="bi bi-phone-fill"></i>&nbsp;Celular</label>
            <input asp-for="celular" class="form-control" placeholder="Digite o número do celular" />
            <span asp-validation-for="celular" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle-fill"></i>&nbsp;Adicionar</button>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
