@model Projeto_Casa_Criancas.Models.Aluno

@{
    ViewData["Title"] = "Excluir Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="bi bi-trash-fill"></i>&nbsp;Excluir Aluno</h1>

<h3>Tem certeza de que deseja excluir este aluno?</h3>
<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-calendar-event-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-house-door-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-phone-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.celular)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.celular)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-people-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.responsavel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.responsavel.nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i>&nbsp;Excluir
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
        </a>
    </form>
</div>
