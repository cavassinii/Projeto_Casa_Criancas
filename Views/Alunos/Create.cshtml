@model Projeto_Casa_Criancas.Models.Aluno

@{
    ViewData["Title"] = "Adicionar Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="bi bi-person-plus-fill"></i>&nbsp;Adicionar Aluno</h1>

<hr />
<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="nome" class="control-label">
                <i class="bi bi-person-fill"></i>&nbsp;Nome
            </label>
            <input asp-for="nome" class="form-control" placeholder="Digite o nome completo" />
            <span asp-validation-for="nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="data" class="control-label">
                <i class="bi bi-calendar-event-fill"></i>&nbsp;Data de Nascimento
            </label>
            <input asp-for="data" class="form-control" placeholder="Selecione a data de nascimento" />
            <span asp-validation-for="data" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="endereco" class="control-label">
                <i class="bi bi-house-door-fill"></i>&nbsp;Endereço
            </label>
            <input asp-for="endereco" class="form-control" placeholder="Digite o endereço completo" />
            <span asp-validation-for="endereco" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="celular" class="control-label">
                <i class="bi bi-phone-fill"></i>&nbsp;Celular
            </label>
            <input asp-for="celular" class="form-control" placeholder="Digite o número do celular" />
            <span asp-validation-for="celular" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="responsavelID" class="control-label">
                <i class="bi bi-people-fill"></i>&nbsp;Responsável
            </label>
            <select asp-for="responsavelID" class="form-control" asp-items="ViewBag.responsavelID"></select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle-fill"></i>&nbsp;Adicionar
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
