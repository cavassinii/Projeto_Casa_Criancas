@model Projeto_Casa_Criancas.Models.Turma

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Excluir Turma";
}

<h1><i class="bi bi-trash-fill"></i>&nbsp;Excluir Turma</h1>

<h3>Tem certeza de que deseja excluir esta turma?</h3>
<div>
    <h4>Turma</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="bi bi-mortarboard-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.curso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.curso.nome)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.monitor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.monitor.nome)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.professor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.professor.nome)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-file-earmark-text-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-calendar-event-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.dataHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dataHora)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i>&nbsp;Excluir
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
        </a>
    </form>
</div>
