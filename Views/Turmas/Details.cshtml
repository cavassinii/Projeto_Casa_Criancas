@model Projeto_Casa_Criancas.Models.Turma

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalhes da Turma";
}

<h1><i class="bi bi-person-lines-fill"></i>&nbsp;Detalhes da Turma</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="bi bi-book-fill"></i>&nbsp;Curso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.curso.nome)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;Monitor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.monitor.nome)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;Professor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.professor.nome)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-file-earmark-text-fill"></i>&nbsp;Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>

        <dt class="col-sm-2">
            <i class="bi bi-calendar-event-fill"></i>&nbsp;Data e Hora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dataHora)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
        <i class="bi bi-pencil-fill"></i>&nbsp;Editar
    </a>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
    </a>
</div>
