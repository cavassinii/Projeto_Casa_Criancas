@model Projeto_Casa_Criancas.Models.Turma

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Turma";
}

<h1><i class="bi bi-person-plus-fill"></i>&nbsp;Editar Turma</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="cursoID" class="control-label">
                    <i class="bi bi-mortarboard-fill"></i>&nbsp;Curso
                </label>
                <select asp-for="cursoID" class="form-control" asp-items="ViewBag.cursoID"></select>
                <span asp-validation-for="cursoID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="monitorID" class="control-label">
                    <i class="bi bi-person-fill"></i>&nbsp;Monitor
                </label>
                <select asp-for="monitorID" class="form-control" asp-items="ViewBag.monitorID"></select>
                <span asp-validation-for="monitorID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="professorID" class="control-label">
                    <i class="bi bi-person-fill"></i>&nbsp;Professor
                </label>
                <select asp-for="professorID" class="form-control" asp-items="ViewBag.professorID"></select>
                <span asp-validation-for="professorID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="descricao" class="control-label">
                    <i class="bi bi-file-earmark-text-fill"></i>&nbsp;Descrição
                </label>
                <input asp-for="descricao" class="form-control" />
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="dataHora" class="control-label">
                    <i class="bi bi-calendar-event-fill"></i>&nbsp;Data e Hora
                </label>
                <input asp-for="dataHora" class="form-control" />
                <span asp-validation-for="dataHora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle-fill"></i>&nbsp;Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
