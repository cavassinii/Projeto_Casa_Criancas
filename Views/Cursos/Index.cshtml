@model IEnumerable<Projeto_Casa_Criancas.Models.Curso>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Cursos";
}

<h1 class="my-4"><i class="bi bi-people-fill"></i> Lista de Cursos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Novo Curso
    </a>
</p>

<form method="get" asp-action="FiltrarCursos" asp-controller="Cursos" class="form-inline my-3">
    <div class="input-group">
        <input type="text" name="curso" class="form-control" placeholder="Pesquisar por curso" value="@ViewData["Nome"]" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Pesquisar
        </button>
    </div>
</form>

<table class="table table-striped table-hover mt-4">
    <thead class="table-dark" style="position: sticky; top: 0; z-index: 1;">
        <tr>
            <th><i class="bi bi-person-fill"></i> @Html.DisplayNameFor(model => model.nome)</th>
            <th><i class="bi bi-file-earmark-text-fill"></i> @Html.DisplayNameFor(model => model.descricao)</th>
            <th><i class="bi bi-person-vcard"></i> @Html.DisplayNameFor(model => model.colaborador)</th>
            <th><i class="bi bi-gear-fill"></i> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.nome)</td>
            <td>@Html.DisplayFor(modelItem => item.descricao)</td>
            <td>@Html.DisplayFor(modelItem => item.colaborador.nome)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                    <i class="bi bi-eye-fill"></i> Detalhes
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                   <i class="bi bi-trash-fill"></i> Excluir
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
