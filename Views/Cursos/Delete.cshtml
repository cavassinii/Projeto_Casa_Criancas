@model Projeto_Casa_Criancas.Models.Curso

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Excluir Curso";
}

<h1><i class="bi bi-trash-fill"></i>&nbsp;Excluir Curso</h1>

<h3>Tem certeza que deseja excluir este curso?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt class = "col-sm-2">
            <i class="bi bi-file-earmark-text-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>

        <dt class = "col-sm-2">
            <i class="bi bi-person-vcard"></i>&nbsp;@Html.DisplayNameFor(model => model.colaborador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.colaborador.nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3-fill"></i>&nbsp;Excluir
        </button> 
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
         </a>
    </form>
</div>
