@model Projeto_Casa_Criancas.Models.Curso

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Adicionar Curso";
}

<h1><i class="bi bi-person-plus-fill"></i>&nbsp;Adicionar Curso</h1>

<hr />
<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="nome" class="control-label">
                <i class="bi bi-person-fill"></i>&nbsp;Nome
            </label>
            <input asp-for="nome" class="form-control" placeholder="Digite o nome do Curso" />
            <span asp-validation-for="nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
             <label asp-for="descricao" class="control-label">
                 <i class="bi bi-file-earmark-text-fill"></i>&nbsp;Descrição
             </label>
             <input asp-for="descricao" class="form-control" placeholder="Descrição do Curso" />
             <span asp-validation-for="descricao" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
             <label asp-for="colaboradorID" class="control-label">
                 <i class="bi bi-person-vcard"></i>&nbsp;Colaborador ID
             </label>
             <select asp-for="colaboradorID" class ="form-control" asp-items="ViewBag.colaboradorID"></select>
        </div>

        <div class="form-group">
             <button type="submit" class="btn btn-success">
                 <i class="bi bi-check-circle-fill"></i>&nbsp;Adicionar
             </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
