@model Projeto_Casa_Criancas.Models.Matricula

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Excluir Matrícula";
}

<h1><i class="bi bi-trash-fill"></i>&nbsp;Excluir Matrícula</h1>

<h3>Tem certeza de que deseja excluir esta matrícula?</h3>
<div>
    <h4>Matricula</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.aluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.aluno.nome)
        </dd>

        <dt class = "col-sm-2">
            <i class="bi bi-person-vcard"></i>&nbsp;@Html.DisplayNameFor(model => model.turma)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.turma.Id)
        </dd>

        <dt class = "col-sm-2">
            <i class="bi bi-calendar-event-fill"></i>&nbsp;@Html.DisplayNameFor(model => model.data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" >
            <i class="bi bi-trash3-fill"></i>&nbsp;Excluir
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
        </a>
    </form>
</div>
