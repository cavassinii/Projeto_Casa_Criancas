@model Projeto_Casa_Criancas.Models.Matricula

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Adicionar Matrícula";
}

<h1><i class="bi bi-person-plus-fill"></i>&nbsp;Adicionar Matrícula</h1>

<hr />
<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="alunoID" class="control-label">
                <i class="bi bi-person-vcard"></i>&nbsp;AlunoID
            </label>
            <select asp-for="alunoID" class ="form-control" asp-items="ViewBag.alunoID"></select>
        </div>

        <div class="form-group">
            <label asp-for="turmaID" class="control-label">
                <i class="bi bi-person-vcard"></i>&nbsp;TurmaID
            </label>
            <select asp-for="turmaID" class ="form-control" asp-items="ViewBag.turmaID"></select>
        </div>

        <div class="form-group mb-3">
            <label asp-for="data" class="control-label">
                <i class="bi bi-calendar-event-fill"></i>&nbsp;Data
            </label>
        <input asp-for="data" class="form-control" placeholder="Digite a Data" />
            <span asp-validation-for="data" class="text-danger"></span>
        </div>

        <div class="form-group">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle-fill"></i>&nbsp;Adicionar
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
        </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
