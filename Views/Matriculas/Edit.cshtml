@model Projeto_Casa_Criancas.Models.Matricula

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Matrícula";
}

<h1><i class="bi bi-person-plus-fill"></i>&nbsp;Editar Matrícula</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="alunoID" class="control-label">
                    <i class="bi bi-person-fill"></i>&nbsp;AlunoID
                </label>
                <select asp-for="alunoID" class="form-control" asp-items="ViewBag.alunoID"></select>
                <span asp-validation-for="alunoID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="turmaID" class="control-label">
                    <i class="bi bi-person-vcard"></i>&nbsp;TurmaID
                </label>
                <select asp-for="turmaID" class="form-control" asp-items="ViewBag.turmaID"></select>
                <span asp-validation-for="turmaID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="data" class="control-label">
                    <i class="bi bi-calendar-event-fill"></i>&nbsp;Data
                </label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i  class="bi bi-check-circle-fill"></i>&nbsp;Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
