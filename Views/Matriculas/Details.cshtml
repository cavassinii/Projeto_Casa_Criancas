@model Projeto_Casa_Criancas.Models.Matricula

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Detalhes da Matrícula";
}

<h1>Details</h1>

<div>
    <h4>Matricula</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <i class="bi bi-person-fill"></i>&nbsp;Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.aluno.nome)
        </dd>

        <dt class = "col-sm-2">
            <i class="bi bi-person-vcard"></i>&nbsp;Turma
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.turma.Id)
        </dd>

        <dt class = "col-sm-2">
            <i class="bi bi-calendar-event-fill"></i>&nbsp;Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
        <i class="bi bi-pencil-fill"></i>&nbsp;Editar
    </a> 
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle"></i>&nbsp;Voltar para a Lista
    </a>
</div>
