@model IEnumerable<Projeto_Casa_Criancas.Models.Turma>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Turmas";
}

<h1 class="my-4"><i class="bi bi-people-fill"></i> Lista de Turmas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Nova Turma
    </a>
</p>

<form method="get" asp-action="Index" class="mb-3">
    <div class="row mb-6">
        <div class="col-md-6 mb-3">
            <label for="cursoID">Filtrar por Curso:</label>
            <select name="cursoID" id="cursoID" class="form-select" asp-items="ViewBag.cursoID">
                <option value="">Todos</option>
            </select>
        </div>

        <div class="col-md-6 mb-3">
            <label for="monitorID">Filtrar por Monitor:</label>
            <select name="monitorID" id="monitorID" class="form-select" asp-items="ViewBag.monitorID">
                <option value="">Todos</option>
            </select>
        </div>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Pesquisar
        </button>
    </div>
</form>


<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th><i class="bi bi-mortarboard-fill"></i> @Html.DisplayNameFor(model => model.curso)</th>
            <th><i class="bi bi-person-fill"></i> @Html.DisplayNameFor(model => model.monitor)</th>
            <th><i class="bi bi-person-fill"></i> @Html.DisplayNameFor(model => model.professor)</th>
            <th><i class="bi bi-file-earmark-text-fill"></i> @Html.DisplayNameFor(model => model.descricao)</th>
            <th><i class="bi bi-calendar-event-fill"></i> @Html.DisplayNameFor(model => model.dataHora)</th>
            <th><i class="bi bi-gear-fill"></i> Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.curso.nome)</td>
                <td>@Html.DisplayFor(modelItem => item.monitor.nome)</td>
                <td>@Html.DisplayFor(modelItem => item.professor.nome)</td>
                <td>@Html.DisplayFor(modelItem => item.descricao)</td>
                <td>@Html.DisplayFor(modelItem => item.dataHora)</td>
                <td>
                    <a asp-action="EfetuarChamada" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                        <i class="bi bi-telephone"></i> Efetuar Chamada
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
