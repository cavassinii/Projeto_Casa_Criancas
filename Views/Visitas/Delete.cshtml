@model Projeto_Casa_Criancas.Models.Visita

@{
    ViewData["Title"] = "Confirmar Exclusão";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Confirmar Exclusão</h1>

<h3>Você tem certeza de que deseja excluir este registro de visita?</h3>
<div>
    <h4>Detalhes da Visita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.aluno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.aluno.celular)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.assistenteSocial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.assistenteSocial.celular)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.situacaoFamiliar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.situacaoFamiliar)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.acoesPreliminares)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.acoesPreliminares)
        </dd>
        <!-- Inclua mais campos conforme necessário -->
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <p class="text-danger">Essa ação não poderá ser desfeita.</p>
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> 
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
