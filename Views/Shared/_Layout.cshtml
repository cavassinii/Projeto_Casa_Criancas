@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/x-icon" href="~/logoPequena.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projeto_Casa_Criancas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        html, body {
            height: 100%;
            overflow: hidden
        }
        .container-fluid {
            display: flex;
            flex-direction: column;
            height: 100%;
        }
        .row.flex-grow-1 {
            flex-grow: 1;
        }

        .custom-scroll {
            padding-bottom: 0;
            margin-bottom: 0; 
            max-height: 100vh; 
            overflow-y: auto; 
        }
        .nav-bar{
            border-radius: 30px 30px 30px 30px;
            box-shadow: 0 0 4px 4px blue;
       }

    </style>

</head>

<body class="px-4 ">
        <div class="container-fluid vh-100">
            <div class="row flex-nowrap h-100" style="margin-top: 10px">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark nav-bar" style="height:98%">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100" >
                        <a class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none text-center">
                            <span class="fs-5 d-none d-sm-inline">Menu</span>
                        </a>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                            <li class="nav-item">
                                <a class="nav-link align-middle px-0 " asp-controller="Home" asp-action="Index">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                    <i class=" fs-4 bi bi-folder"></i> <span class="ms-1 d-none d-sm-inline">Cadastros</span>
                                </a>
                                <ul class="collapse  nav flex-column ms-1" id="submenu1" data-bs-parent="#menu">
                                    <li class="w-100">
                                        <a  class="nav-link px-0" asp-controller="Alunos" asp-action="Index"> <span class="d-none d-sm-inline">Alunos</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Responsaveis" asp-action="Index"> <span class="d-none d-sm-inline">Responsáveis</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Colaboradores" asp-action="Index"> <span class="d-none d-sm-inline">Colaboradores</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Cursos" asp-action="Index"> <span class="d-none d-sm-inline">Cursos</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Matriculas" asp-action="Index"> <span class="d-none d-sm-inline">Matrículas</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Professores" asp-action="Index"> <span class="d-none d-sm-inline">Professores</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Turmas" asp-action="Index"> <span class="d-none d-sm-inline">Turmas</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Visitas" asp-action="Index"> <span class="d-none d-sm-inline">Visitas</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a class="nav-link px-0" asp-controller="Monitores" asp-action="Index"> <span class="d-none d-sm-inline">Monitores</span>  </a>
                                    </li>
                                    <li class="w-100">
                                        <a  class="nav-link px-0" asp-controller="AssistenteSociais" asp-action="Index"> <span class="d-none d-sm-inline">Assistente Social</span>  </a>
                                    </li>
                                </ul>
                            </li>                                                
                           
                            <li>
                                <a href="#" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi bi-file-text"></i> <span class="ms-1 d-none d-sm-inline">Relatórios</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Chamadas" asp-action="Index" class="nav-link px-0 align-middle">
                                    <i class="fs-4 bi bi-check-circle"></i> <span class="ms-1 d-none d-sm-inline">Chamadas</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="dropdown pb-4" style="cursor:pointer;">
                        <a class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="d-none d-sm-inline mx-1 ">@User.Identity?.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" style="cursor:pointer;">
                            <li>
                                <a class="dropdown-item bi bi-person-circle" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Conta</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li class="dropdown-item" style="cursor:pointer;">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("IndexPrincipal", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link text-white bi bi-box-arrow-left"> Sair</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col bg-light p-4 navbar-nav-scroll custom-scroll" style="margin: 5px">
                    @RenderBody()
                </div>
            </div> 
        </div>

</body>
</html>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
